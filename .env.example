# Deliver-AI Environment Variables
# Copy this file to .env.local for development or .env.production for production

# =============================================================================
# REQUIRED - Application will not start without these
# =============================================================================

# PostgreSQL connection string (Neon recommended)
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# Encryption key for sensitive data (minimum 32 characters)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('base64'))"
ENCRYPTION_KEY=

# =============================================================================
# REQUIRED FOR PRODUCTION
# =============================================================================

# HMAC secret for tracking tokens (64 character hex string)
# Generate: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
TRACKING_SECRET=

# =============================================================================
# OPTIONAL - Features disabled without these
# =============================================================================

# Google Gemini API key (for AI assistant)
GEMINI_API_KEY=

# AWS SES credentials (for email sending)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================

# Environment mode: development or production
NODE_ENV=development

# Server port (default: 5000)
PORT=5000

# Enable API debug logging (development only)
VITE_API_DEBUG=false
